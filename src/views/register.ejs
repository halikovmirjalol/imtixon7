<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    *{
    margin: 0;
    padding: 0;
    }



svg {
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
}

/*---------------------------------------------------------------------------*/

@keyframes new-wrapp {
    0% { top: -200%; }
    100% { top: 0; }
}

@keyframes show-fade {
    0% { opacity: 0; }
    100% { opacity: 1; }
}

@keyframes show-up {
    0% { top: 500px; }
    100% { top: 0px; }
}

@keyframes img-show {
    0% { height: 0; }
    25% { height: 0; }
    100% { height: 100%; }
}

@keyframes line-up {
    0% { top: 245px; opacity: 0; }
    10% { top: 245px; opacity: 1; }
    85% { top: -5px; opacity: 1; }
    100% { opacity: 0; }
}

@keyframes check {
    0% { height: 150px; width: 150px; }
    100% { height: 100px; width: 100px; }
}

/*---------------------------------------------------------------------------*/


#wrapp {
    width: 500px;
    height: 500px;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(.21,.38,.57,1.35) 0s;
    animation: new-wrapp 0.5s cubic-bezier(.21,.38,.57,1.35) 0s;
}

/*---------------------------------------------------------------------------*/

#image-wrapp, #text-wrapp, #image-select,
#image-select:before, .button {
    transition: all 0.2s linear 0s;
}

#image-wrapp {
    background: #7e5863;
    position: relative;
    width: 100%;
    height: 75%;
    box-sizing: border-box;
}

#image-wrapp.select {
    height: 100%;
}

#text-wrapp {
    position: absolute;
    width: 100%;
    height: 30%;
    background: #ff7969;
    color: #ffffff;
}

#text-wrapp span{
    position: absolute;
    text-align: center;
    width: 100%;
    top: 50%;
    margin-top: -0.7em;
    animation: show-fade 0.2s linear 0s;
}

#image-wrapp.select #text-wrapp {
    height: 15%;
}

#text-wrapp:after {
    content: "";
    position: absolute;
    display: block;
    height: 0;
    width: 0;
    border: 10px solid transparent;
    border-top-color: #ff7969;
    top: 100%;
    left: 0;
    right: 0;
    margin: auto;
}

/*---------------------------------------------------------------------------*/

#image-select path{
    fill: none;
    stroke: #ff7969;
    stroke-width: 7;
    stroke-dasharray: 13, 19;
    stroke-linejoin: round;
    stroke-linecap: square;
}

#image-select {
    width: 180px;
    height: 150px;
    position: absolute;
    top: 100px;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    box-sizing: border-box;
    text-align: center;
}

#image-select.hover {
    width: 200px;
    height: 170px;
    background: #a55765;
}

.select #image-select{
    width: 0;
    height: 0;
    opacity: 0;
}

#image-select:before {
    content: "+";
    display: block;
    font-size: 2em;
    color: #ff7969;
    position: absolute;
    top: 50%;
    right: 0;
    bottom: 0;
    left: 0;
    margin: -25px auto auto auto;
}

.select #image-select:before {
    font-size: 0em;
}

/*---------------------------------------------------------------------------*/

.button-wrapp {
    background: #ffffff;
    position: relative;
    width: 100%;
    height: 25%;
    text-align: center;
}

.button {
    width: 40%;
    height: 60px;
    line-height: 60px;
    cursor: pointer;
    color: #ffffff;
    background-color: #ff7969;
    border-bottom: solid 4px #f66351;
}

.button:hover {
    background-color: #f66351;
}

.upload {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
}

.upload input {
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
    cursor: pointer;
}

/*---------------------------------------------------------------------------*/

#image-view {
    width: 300px;
    height: 250px;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    border: 15px solid #ffffff;
    background: #f66351;
    animation: show-up 0.2s linear 0s;
}

.image {
    position: absolute;
    width: 100%;
    height: 100%;
    bottom: 0;
    animation: img-show 2s linear 0s;
    overflow: hidden;
}

#image-view .image div {
    bottom: 0;
    position: absolute;
    width: 300px !important;
    height: 250px !important;
    background-position: bottom center;
    background-repeat: no-repeat;
    background-size: cover;
}

.line {
    width: 370px;
    height: 10px;
    left: -35px;
    border-radius: 5px;
    background: #ffb86f;
    position: absolute;
    opacity: 0;
    top: -5px;
    animation: line-up 2s linear 0.3s;
}

/*---------------------------------------------------------------------------*/

#check {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    height: 100px;
    width: 100px;
    border-radius: 50%;
    background: #a55765;
    text-align: center;
    animation: check 0.15s linear 0s, show-fade 0.15s linear 0s;
}

#check polyline{
    fill: none;
    stroke: #ffffff;
    stroke-width: 5;
}

/*---------------------------------------------------------------------------*/

.next {
    position: absolute;
    margin: auto;
    top: 0;
    bottom: -390px;
    left: 0;
    right: 0;
    text-align: center;
    animation: show-fade 0.15s linear 0s;
}
</style>
<body>
    register
    <form action="/api/register" method="post">
        <input type="text" name="username">
        <input type="password" name="password">
        <p>acountingiz bo'lsa <a href="./login">Login</a>ga o'ting</p>

        <div id="wrapp">
            <div id="image-wrapp">
              <div id="text-wrapp">
                <span>Drop image to upload</span>
              </div>
              <div id="image-select">
                <svg viewBox="0 0 170 150">
                  <path d="M0,3.5 170,3.5 170,146.5 0,146.5z"/>
                </svg>
              </div>
            </div>
            <div class="button-wrapp">
              <div class="button upload">
                <span>Pick one</span>
                <input id="file-select" type="file">
              </div>
            </div>
          </div>

        <input type="submit" value="submit">
    </form>
    <script>
        (function() {
    var template;

    if (window.File && window.FileList && window.FileReader)
        newTemplate();
    else
        alert("Your browser version low then needs so it dosn't support FileReader.");

    function newTemplate() {
        var wrapp = document.getElementById('wrapp');
        template = wrapp.cloneNode(true);
        Init();
    }

    function Init() {
        var fileSelect = document.getElementById('file-select'),
            fileDrag = document.getElementById('image-select');

        fileSelect.addEventListener('change', fileSelectFunc);
        fileDrag.addEventListener('drop', fileSelectFunc);
        fileDrag.addEventListener('dragover', dragOverFunc);
        fileDrag.addEventListener('dragleave', dragOverFunc);
    }

    function dragOverFunc(e) {
        e.stopPropagation();
        e.preventDefault();
        e.target.className = (e.type == 'dragover' ? 'hover' : '');
    }

    function fileSelectFunc(e) {
        e.stopPropagation();
        e.preventDefault();
        var file = e.target.files || e.dataTransfer.files;
        if (file[0].type.match('image/*'))
            ParseFile(file[0]);
        else
            e.target.className = '';
    }

    function ParseFile(f) {
        var view = document.createElement('div'),
            span = document.createElement('span');
        var wrap = document.getElementById('image-wrapp'),
            text = document.getElementById('text-wrapp');

        wrap.className = "select";

        view.id = 'image-view';
        wrap.appendChild(view);

        span.innerHTML = 'Uploading...';
        text.children[0].style.opacity = 0;
        text.insertBefore(span, text.children[1]);

        ShowImage(f);
    }

    function ShowImage(f) {
        var reader = new FileReader();

        reader.onload = (function() {
            return function(e) {
                var container = document.createElement('div'),
                    img = document.createElement('div'),
                    line = document.createElement('div');
                var view = document.getElementById('image-view');

                container.className = 'image';

                img.style.backgroundImage = 'url(' + e.target.result + ')';
                container.appendChild(img);

                line.className = 'line';

                line.addEventListener("webkitAnimationEnd", AnimationEnd, false);
                line.addEventListener("animationend", AnimationEnd, false);
                line.addEventListener("oanimationend", AnimationEnd, false);

                view.appendChild(container);
                view.appendChild(line);
            }
        })(f);

        reader.readAsDataURL(f);
    }

    function AnimationEnd() {
        var check = document.createElement('div'),
            next = document.createElement('div'),
            load = document.createElement('span');
        var wrap = document.getElementById('image-wrapp'),
            text = document.getElementById('text-wrapp'),
            view = document.getElementById('image-view');

        check.innerHTML = '<svg viewBox="0 0 50 50">' +
            '<polyline points="15,25 23,31 33,15"/>' +
            '</svg>';
        check.id = 'check';
        view.appendChild(check);

        load.innerHTML = 'Upload complete!';
        text.children[1].style.opacity = 0;
        text.insertBefore(load, text.children[2]);

        next.className = 'button next';
        next.innerHTML = 'Next file';
        next.addEventListener('click', nextImage, false);
        wrap.appendChild(next);
    }

    function nextImage() {
        var old = document.getElementById('wrapp');
        old.addEventListener("webkitTransitionEnd", New, false);
        old.addEventListener("transitionend", New, false);
        old.addEventListener("oTransitionEnd", New, false);
        old.style.top = '200%';
        document.body.appendChild(template);
    }

    function New() {
        document.body.removeChild(this);
        newTemplate();
    }

})();
    </script>
</body>
